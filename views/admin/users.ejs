<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>User Management - LegacyKeeper</title>
  <link rel="stylesheet" href="/css/style.css">
</head>
<body>
  <%- include('../partials/navbar') %>

  <div class="container">
    <%- include('../partials/alerts') %>

    <div class="page-header">
      <h1 class="page-title">User Management</h1>
      <a href="/admin/users/new" class="btn btn-primary">Add New User</a>
    </div>

    <div class="table">
      <table>
        <thead>
          <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Phone</th>
            <th>Role</th>
            <th>Status</th>
            <th>MFA</th>
            <th>Created</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% if (users.length === 0) { %>
            <tr>
              <td colspan="8" style="text-align: center;">No users found</td>
            </tr>
          <% } else { %>
            <% users.forEach(user => { %>
              <tr>
                <td>
                  <%= user.FirstName %>
                  <%= user.MiddleName ? user.MiddleName + ' ' : '' %>
                  <%= user.LastName %>
                </td>
                <td><%= user.Email %></td>
                <td><%= user.PhoneNumber || 'N/A' %></td>
                <td><span style="text-transform: capitalize;"><%= user.Role %></span></td>
                <td>
                  <span style="color: <%= user.AccountStatus === 'active' ? 'var(--success)' : user.AccountStatus === 'suspended' ? 'var(--warning)' : 'var(--error)' %>; text-transform: capitalize;">
                    <%= user.AccountStatus %>
                  </span>
                </td>
                <td><%= user.MFA_Enabled ? '✓ Enabled' : '✗ Disabled' %></td>
                <td><%= new Date(user.CreatedDate).toLocaleDateString() %></td>
                <td>
                  <div class="action-buttons">
                    <a href="/admin/users/<%= user.UniqueId %>/edit" class="btn btn-secondary btn-small">Edit</a>
                    <form action="/admin/users/<%= user.UniqueId %>?_method=DELETE" method="POST" style="display: inline;" onsubmit="return confirm('Are you sure you want to delete this user?');">
                      <button type="submit" class="btn btn-danger btn-small">Delete</button>
                    </form>
                  </div>
                </td>
              </tr>
            <% }); %>
          <% } %>
        </tbody>
      </table>
    </div>
  </div>
</body>
</html>
