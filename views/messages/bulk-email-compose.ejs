<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Bulk Email - LegacyKeeper</title>
  <link rel="stylesheet" href="/css/style.css">
  <style>
    .recipients-section {
      margin-bottom: 2rem;
    }
    .recipients-grid {
      display: grid;
      grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
      gap: 0.5rem;
      max-height: 300px;
      overflow-y: auto;
      padding: 1rem;
      background: var(--bg-tertiary);
      border-radius: 5px;
      border: 1px solid var(--border-color);
    }
    .recipient-item {
      display: flex;
      align-items: center;
      gap: 0.5rem;
      padding: 0.5rem;
      background: var(--bg-secondary);
      border-radius: 5px;
    }
    .recipient-item input[type="checkbox"] {
      width: auto;
      margin: 0;
    }
    .recipient-item label {
      margin: 0;
      cursor: pointer;
      flex: 1;
    }
    .select-all-btn {
      margin-bottom: 1rem;
      padding: 0.5rem 1rem;
      background: var(--bg-tertiary);
      border: 1px solid var(--border-color);
      color: var(--text-primary);
      cursor: pointer;
      border-radius: 5px;
    }
    .select-all-btn:hover {
      background: var(--accent-primary);
      color: white;
    }
  </style>
</head>
<body>
  <%- include('../partials/navbar') %>

  <div class="container">
    <%- include('../partials/alerts') %>

    <div class="form-container" style="max-width: 900px;">
      <h2 class="card-title">Bulk Email</h2>
      <p style="color: var(--text-secondary); margin-bottom: 2rem;">
        Select contacts and/or contact groups to send your message to. Recipients from groups will be automatically included.
      </p>

      <form action="/messages/bulk-email/send" method="POST">
        <div class="form-group">
          <label for="Subject">Subject: *</label>
          <input type="text" id="Subject" name="Subject" class="form-control" required>
        </div>

        <div class="form-group">
          <label for="MessageBody">Message: *</label>
          <textarea id="MessageBody" name="MessageBody" class="form-control" rows="10" required></textarea>
        </div>

        <% if (contactGroups && contactGroups.length > 0) { %>
          <div class="recipients-section">
            <h3 style="color: var(--accent-primary); margin-bottom: 1rem;">Contact Groups</h3>
            <button type="button" class="select-all-btn" onclick="toggleSelectAll('groups')">Select All Groups</button>
            <div class="recipients-grid" id="groups-grid">
              <% contactGroups.forEach(group => { %>
                <div class="recipient-item">
                  <input type="checkbox" id="group_<%= group.UniqueId %>" name="SelectedGroups" value="<%= group.UniqueId %>" checked>
                  <label for="group_<%= group.UniqueId %>">
                    <%= group.GroupName %> (<%= group.Members ? group.Members.length : 0 %> members)
                  </label>
                </div>
              <% }); %>
            </div>
          </div>
        <% } %>

        <% if (contacts && contacts.length > 0) { %>
          <div class="recipients-section">
            <h3 style="color: var(--accent-primary); margin-bottom: 1rem;">Individual Contacts</h3>
            <button type="button" class="select-all-btn" onclick="toggleSelectAll('contacts')">Select All Contacts</button>
            <div class="recipients-grid" id="contacts-grid">
              <% contacts.forEach(contact => { %>
                <% if (contact.Email && contact.Email.trim() !== '') { %>
                  <div class="recipient-item">
                    <input type="checkbox" id="contact_<%= contact.UniqueId %>" name="SelectedContacts" value="<%= contact.UniqueId %>" checked>
                    <label for="contact_<%= contact.UniqueId %>">
                      <%= contact.FirstName %> <%= contact.LastName %><br>
                      <small style="color: var(--text-secondary);"><%= contact.Email %></small>
                    </label>
                  </div>
                <% } %>
              <% }); %>
            </div>
          </div>
        <% } %>

        <div class="form-group" style="display: flex; align-items: center; gap: 0.5rem;">
          <input type="checkbox" id="SendEmail" name="SendEmail" style="width: auto;" checked>
          <label for="SendEmail" style="margin: 0;">Send actual email notifications (requires email configuration)</label>
        </div>

        <div style="display: flex; gap: 1rem; margin-top: 2rem;">
          <button type="submit" class="btn btn-primary">Send Bulk Email</button>
          <a href="/messages" class="btn btn-secondary">Cancel</a>
        </div>
      </form>
    </div>
  </div>

  <script>
    function toggleSelectAll(type) {
      const gridId = type === 'groups' ? 'groups-grid' : 'contacts-grid';
      const checkboxes = document.querySelectorAll(`#${gridId} input[type="checkbox"]`);
      const allChecked = Array.from(checkboxes).every(cb => cb.checked);

      checkboxes.forEach(cb => {
        cb.checked = !allChecked;
      });

      const button = event.target;
      button.textContent = allChecked
        ? `Select All ${type === 'groups' ? 'Groups' : 'Contacts'}`
        : `Deselect All ${type === 'groups' ? 'Groups' : 'Contacts'}`;
    }
  </script>
</body>
</html>
